<aside class="sidebar-section">
    <div class="sidebar-container">
        <!-- work on building this... this will display
         folder options, from there we can develop
         folder/file queries -->
        <a href="/" class="home-link">
            Home
        </a>
        <% if (locals.homeFolder) {%>
            <a href="/folder/create/<%= homeFolder.id %>" class="add-folder-link">
                + New Folder
            </a>
            <% if (locals.children) {%>
                <% children.forEach(folder => { %>
                    <a href="/folder/library/<%= folder.id %>" class="sub-home-folder-link">
                        <%= folder.name %>
                    </a>
                <% }) %>
            <% } %>
        <% } %>
        
        <a href="/file/upload/<%= homeFolder.id %>" class="upload-home-file">
            Upload File
        </a>
        <!-- 9/15: TMW... create "Upload File" link here, and add one 
        in the navBar view as well for all folder views
        - look in multer middleware and start figuring out how
        file uploads work -->
    </div>
</aside>